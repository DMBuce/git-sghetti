#!/bin/bash

# define some vars
prog="${0##*/}"
action="${prog#git-sghetti--}"
oldprog="$prog"
prog="${prog/-sghetti--/ sghetti }"
SUBDIRECTORY_OK=Yes
NONGIT_OK=Yes
OPTIONS_KEEPDASHDASH=
OPTIONS_STUCKLONG=
OPTIONS_SPEC="\
$prog

\`git push\` so hard you'll break your system.
--
"

# normalize options, set up shell functions, define $GIT_DIR, $GIT_OBJECT_DIRECTORY
. "$(git --exec-path)/git-sh-setup"

# parse options
while (( $# )); do
	case "$1" in
		--)
			shift
			break
		;;
		-*)
			die "Unimplemented option (this is a bug): $1"
		;;
		*)
			break
		;;
	esac
	shift
done

# parse remote url
. git-sghetti

# do the thing
git sghetti yeet && sudo pacrepo -Syu

