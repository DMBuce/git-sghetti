#!/bin/bash

# define some vars
prog="${0##*/}"
action="${prog#git-}"
SUBDIRECTORY_OK=Yes
NONGIT_OK=
OPTIONS_KEEPDASHDASH=
OPTIONS_STUCKLONG=
OPTIONS_SPEC="\
${prog/-/ }

Delete the remote repository.
--
"

# normalize options, set up shell functions, define $GIT_DIR, $GIT_OBJECT_DIRECTORY
. "$(git --exec-path)/git-sh-setup"

# parse options
while (( $# )); do
	case "$1" in
		--)
			shift
			break
		;;
		-*)
			die "Unimplemented option (this is a bug): $1"
		;;
		*)
			break
		;;
	esac
	shift
done

# parse remote url
. git-sghetti

# let the user override this script on a per-flavor or per-action basis
helper="git-sghetti--$flavor"
if command -v "$helper-$action" &>/dev/null; then
	exec "$helper-$action" \
		"$action" "$url" "$flavor" "$scheme" "$proto" "$host" "$user" "$dir"
elif command -v "$helper" &>/dev/null; then
	exec "$helper" \
		"$action" "$url" "$flavor" "$scheme" "$proto" "$host" "$user" "$dir"
fi

# harcoded behavior
case "$flavor" in
	ssh)
		# determine ssh target
		target="$host"
		if [[ -n "$user" ]]; then
			target="$user@$host"
		fi

		# prompt user (with `rm -I`) and remove remote repo
		set -x
		exec ssh "$target" "rm -rvI $dir"
	;;
	hub)
		exec git hub delete "${dir#/}"
	;;
	aur)
		# aur's api doesn't support disowning packages or requesting deletion,
		# so just tell the user what to do
		pkg="${dir%.git}"
		pkg="${pkg#/}"
		echo "Log into AUR to manually delete or disown from the package page:"
		echo "  https://$host/packages/$pkg/"
		echo
		echo "Select 'Disown Package' to disown or 'Submit Request' to request deletion."
	;;
	*)
		die "Flavor not implemented for '$action': $flavor"
	;;
esac

