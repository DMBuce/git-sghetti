#!/bin/bash

# define some vars
prog="${0##*/}"
SUBDIRECTORY_OK=Yes
NONGIT_OK=Yes
USAGE=''
LONG_USAGE='Open a random git man page.'

# parse $OPTIONS_SPEC and process --help option
. "$(git --exec-path)/git-sh-setup"

# check args
if [[ "$*" == *--help* ]]; then
	die "$LONG_USAGE"
fi

# show random git-* man page
manpath="$(manpath)"
man "$(find ${manpath//:/ } -type f | grep -o 'git-[^.]*' | shuf -n1)"

