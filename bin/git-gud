#!/bin/bash

# define some vars
prog="${0##*/}"
SUBDIRECTORY_OK=Yes
NONGIT_OK=Yes
USAGE=''
LONG_USAGE='Open a random git man page.'

# set up shell functions, define $GIT_DIR, $GIT_OBJECT_DIRECTORY
. "$(git --exec-path)/git-sh-setup"

# show random git-* man page
manpath="$(manpath)"
man "$(find ${manpath//:/ } -type f | grep -o 'git-[^.]*' | shuf -n1)"

